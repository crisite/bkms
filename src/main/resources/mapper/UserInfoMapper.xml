<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.puff.bkms.mapper.UserInfoMapper">

    <select id="selectUserInfo" resultType="com.puff.bkms.model.entity.UserInfo">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="selectRoleByUserId" resultType="java.lang.String">
        SELECT r.role_name
        from role r
            left join in_user_role iur on r.id = iur.role_id
            left join user u on  u.id = iur.user_id
        where u.id = #{userId}
    </select>
</mapper>